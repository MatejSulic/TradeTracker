<MudSnackbarProvider />
<MudPopoverProvider /> 

<MudLayout>
    <MudAppBar Elevation="1">
        <MudButton Typo="Typo.h5" Class="ml-3" Href="/">TradeTracker</MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Rounded.AddCircle" Href="/create-trade" Color="Color.Inherit" Edge="Edge.End" />
