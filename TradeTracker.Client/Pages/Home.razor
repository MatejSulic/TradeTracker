@page "/"
@using System.Net.Http.Json
@inject HttpClient Http 
@using TradeTracker.Shared.Models 

<h3>Přehled všech obchodů</h3>

@if (trades == null)
{
    <p><em>Načítání obchodních dat...</em></p>
}
else if (trades.Length == 0)
{
    <p>Nebyly nalezeny žádné obchody.</p>
}
else
{
    
    
}

@code {
    private Trade[]? trades; 

    protected override async Task OnInitializedAsync()
    {
        try
        {
            trades = await Http.GetFromJsonAsync<Trade[]>("api/Trade");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Chyba při načítání obchodů: {ex.Message}");
            trades = Array.Empty<Trade>();
        }
    }
}