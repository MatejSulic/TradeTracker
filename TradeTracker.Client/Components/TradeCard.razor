@using TradeTracker.Shared.Models


<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">@Trade.Id</MudText>
        <MudText>Symbol: @Trade.Symbol</MudText>
        <MudText>Typ: @Trade.Type</MudText>
        <MudText>Výsledek: @Trade.Result</MudText>
        <MudText>Datum: @Trade.TradeDate.ToShortDateString()</MudText>
    </MudCardContent>
</MudCard>



@code {
    [Parameter]
    [EditorRequired] // Upozorní, že parametr musí být nastaven
    public Trade Trade { get; set; } = default!;



    
}